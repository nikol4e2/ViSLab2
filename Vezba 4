lambda <- 3  # Параметар λ
a <- 0.5     # Долна граница
b <- 1.5     # Горна граница

# Пресметување на веројатноста дека поправката ќе трае помеѓу 0.5 и 1.5 часа
probability <- pexp(b, rate = lambda) - pexp(a, rate = lambda)
cat("Веројатноста дека поправката ќе трае помеѓу 0.5 и 1.5 часа: ", probability, "\n")

# Пресметување на густината на веројатност на времето 1 час
density_at_1 <- dexp(1, rate = lambda)
cat("Густината на веројатност за времето од 1 час: ", density_at_1, "\n")
